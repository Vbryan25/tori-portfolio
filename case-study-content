import React from "react"
import type { Project } from "@/lib/projects"

function SectionLabel({ children }: { children: React.ReactNode }) {
  return (
    <p className="font-mono text-[10px] uppercase tracking-widest text-accent">
      {children}
    </p>
  )
}

export function CaseStudyContent({ project }: { project: Project }) {
  return (
    <div className="mx-auto max-w-5xl px-6 py-16 md:py-24">
      {/* Overview + Problem in a 2-col layout */}
      <div className="grid gap-16 md:grid-cols-2 md:gap-12">
        <div>
          <SectionLabel>Overview</SectionLabel>
          <p className="mt-4 text-sm leading-relaxed text-muted-foreground">
            {project.overview}
          </p>
        </div>
        <div>
          <SectionLabel>The Problem</SectionLabel>
          <p className="mt-4 text-sm leading-relaxed text-muted-foreground">
            {project.problem}
          </p>
        </div>
      </div>

      {/* Divider */}
      <div className="my-16 border-t border-border md:my-24" />

      {/* Process phases */}
      <div>
        <SectionLabel>Process</SectionLabel>
        <h2 className="mt-3 text-2xl font-semibold tracking-tight text-foreground md:text-3xl">
          Project Phases
        </h2>

        <div className="mt-12 flex flex-col gap-0">
          {project.phases.map((phase, index) => (
            <div key={phase.number} className="relative flex gap-6 md:gap-10">
              {/* Timeline track */}
              <div className="flex flex-col items-center">
                <div className="relative z-10 flex h-10 w-10 shrink-0 items-center justify-center rounded-full border-2 border-accent bg-card font-mono text-xs font-semibold text-accent">
                  {phase.number}
                </div>
                {index < project.phases.length - 1 && (
                  <div className="w-px flex-1 bg-border" />
                )}
              </div>

              {/* Phase content */}
              <div className="pb-12 md:pb-16">
                <div className="flex flex-wrap items-baseline gap-3">
                  <h3 className="text-lg font-semibold tracking-tight text-foreground">
                    {phase.title}
                  </h3>
                  <span className="font-mono text-xs text-muted-foreground">
                    {phase.duration}
                  </span>
                </div>

                <p className="mt-3 max-w-xl text-sm leading-relaxed text-muted-foreground">
                  {phase.description}
                </p>

                {/* Deliverables */}
                <div className="mt-5">
                  <p className="font-mono text-[10px] uppercase tracking-widest text-muted-foreground">
                    Deliverables
                  </p>
                  <div className="mt-3 flex flex-wrap gap-2">
                    {phase.deliverables.map((d) => (
                      <span
                        key={d}
                        className="border border-border bg-card px-3 py-1.5 font-mono text-[10px] uppercase tracking-wider text-muted-foreground"
                      >
                        {d}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      {/* Divider */}
      <div className="my-16 border-t border-border md:my-24" />

      {/* Outcomes */}
      <div>
        <SectionLabel>Results</SectionLabel>
        <h2 className="mt-3 text-2xl font-semibold tracking-tight text-foreground md:text-3xl">
          Outcomes
        </h2>

        <div className="mt-10 grid grid-cols-2 gap-px border border-border md:grid-cols-4">
          {project.outcomes.map((outcome) => (
            <div key={outcome.label} className="bg-card px-5 py-8 text-center">
              <p className="font-mono text-3xl font-bold text-accent md:text-4xl">
                {outcome.metric}
              </p>
              <p className="mt-2 text-xs leading-relaxed text-muted-foreground">
                {outcome.label}
              </p>
            </div>
          ))}
        </div>
      </div>

      {/* Divider */}
      <div className="my-16 border-t border-border md:my-24" />

      {/* Reflection */}
      <div className="mx-auto max-w-2xl text-center">
        <SectionLabel>Reflection</SectionLabel>
        <blockquote className="mt-6 text-lg leading-relaxed text-foreground md:text-xl text-pretty">
          {'"'}{project.reflection}{'"'}
        </blockquote>
      </div>

      {/* Tags */}
      <div className="mt-16 flex flex-wrap items-center justify-center gap-2 md:mt-24">
        {project.tags.map((tag) => (
          <span
            key={tag}
            className="border border-border bg-card px-3 py-1.5 font-mono text-[10px] uppercase tracking-wider text-muted-foreground"
          >
            {tag}
          </span>
        ))}
      </div>
    </div>
  )
}
